page{
  font-size: 30rpx;
  color: #333;
  background-color: #efeff4
}
input , textarea{
  font-size: 30rpx;
  height: 80rpx;
  border: 1rpx solid #d2d2d2;
  border-radius: 8rpx;
}
input{
  padding: 0 10rpx
}

.option-btn {
  margin: 40rpx 30rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  color: white;
  text-align: center;
  font-size: 32rpx;
  background: linear-gradient(to right, #ffa033, #ff8840);
}
.option-btn:active{
  opacity: .6
}
.hover-class{
  opacity: .6
}

.nomore{
  width: 100%;
  line-height: 60rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
}

